           <li class="nav-item dropdown">
               <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
<%= current_user.name %>
               </a>
           
           
           <ul class="dropdown-menu dropdown-menu-right">
               <li class="dropdown-item">
<%= link_to "MyProfile", user_path(current_user) %>
